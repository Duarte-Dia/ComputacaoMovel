<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/buttonNotasLandscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:onClick="onClickNotas"
        app:srcCompat="@drawable/icon_notas" />

    <ImageButton
        android:id="@+id/buttonDefinitionsLandscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLoginLandscape"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/buttonNotasLandscape"
        android:onClick="onClickDefinitions"
        app:srcCompat="@drawable/icon_definitions" />

    <ImageButton
        android:id="@+id/buttonLoginLandscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/buttonNotasLandscape"
        android:onClick="onClickLogin"
        app:srcCompat="@drawable/icon_login" />

    <ImageButton
        android:id="@+id/buttonMapLandscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNotasLandscape"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="70dp"
        android:onClick="onClickMap"
        app:srcCompat="@drawable/icon_map" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_notas"
        app:backgroundTint="@color/cardview_shadow_end_color" />




</RelativeLayout>